{
  "manifest_version": 3,
  "name": "Companion Dog",
  "version": "1.0.0",
  "description": "Your encouraging browser buddy that provides motivation, reminders, and note-taking",
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/generated/*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/generated/dog-companion.dim_256x256.png",
    "48": "assets/generated/dog-companion.dim_256x256.png",
    "128": "assets/generated/dog-companion.dim_256x256.png"
  }
}
